<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.PomodoroTimer" parent="Theme.AppCompat.Light.NoActionBar">

        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>

        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_700</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/white</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?colorPrimary</item>
        <!-- Customize your theme here. -->


        <!-- Typography -->
        <item name="colorTitle">@color/black</item>
        <item name="colorPrimaryText">?colorOnPrimary</item>
        <item name="colorSecondaryText">?colorOnSecondary</item>
        <item name="colorDescriptionText">@color/gray</item>

        <!-- Pomodoro Timer theme -->
        <item name="colorOnWork">@color/pink</item>
        <item name="colorOnWorkVariant">@color/purple_400</item>
        <item name="colorOnRest">@color/teal_700</item>
        <item name="colorOnRestVariant">@color/teal_200</item>


    </style>

    <!-- Default -->
    <style name="Theme.PomodoroTimer.Default">
    </style>


</resources>